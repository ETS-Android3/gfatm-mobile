<resources>

    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimaryDark">@color/midnightGreen</item>
        <item name="colorPrimary">@color/metallicSeaweed</item>
        <item name="colorAccent">@color/charlestonGreen</item>
        <item name="colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

        <item name="colorRegistration">@color/teal</item>
        <item name="colorScreening">@color/purple</item>
        <item name="colorTreatment">@color/harleyDavidsonOrange</item>
        <item name="colorFollowup">@color/ToryBlue</item>
        <item name="colorMonitoring">@color/blueSponge</item>
        <item name="colorOther">@color/amber</item>
        <item name="colorButton">@color/bacon</item>
        <item name="colorWarning">@color/yellow</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="buttonStyle">@style/button</item>
        <item name="android:radioButtonStyle">@style/radio</item>
        <item name="radioButtonStyle">@style/radio</item>
        <item name="android:editTextStyle">@style/editTextStyle</item>
        <item name="android:dropDownSpinnerStyle">@style/spinnerStyle</item>
        <item name="android:checkboxStyle">@style/checkBoxStyle</item>
        <item name="android:textViewStyle">@style/text</item>
        <item name="android:alertDialogStyle">@style/dialog</item>
        <item name="alertDialogStyle">@style/dialog</item>
        <item name="android:alertDialogTheme">@style/dialog</item>
        <item name="alertDialogTheme">@style/dialog</item>
        <item name="android:autoCompleteTextViewStyle">@style/autoCompleteTextView</item>
        <item name="progressBarStyle">@style/progressBar</item>

    </style>

    <style name="DarkTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DarkTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/form_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/medium</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="radio" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="editTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="spinnerStyle" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="checkBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="text" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="autoCompleteTextView" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/metallicSeaweed</item>
        <item name="colorPrimaryDark">@color/midnightGreen</item>
        <item name="colorAccent">@color/charlestonGreen</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="progressBar" parent="@android:style/Widget.ProgressBar">
        <item name="colorPrimary">@color/metallicSeaweed</item>
        <item name="colorPrimaryDark">@color/midnightGreen</item>
        <item name="colorAccent">@color/metallicSeaweed</item>
    </style>


</resources>
