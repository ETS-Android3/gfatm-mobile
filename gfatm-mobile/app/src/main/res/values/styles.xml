<resources>

    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimaryDark">@color/sherpaBlue</item>
        <item name="colorPrimary">@color/allPorts</item>
        <item name="colorAccent">@color/crimson</item>
        <item name="colorBackground">@color/whiteLilac</item>
        <item name="colorAlternate">@color/spray</item>

        <item name="colorRegistration">@color/saddleBrown</item>
        <item name="colorScreening">@color/purpleTaupe</item>
        <item name="colorTreatment">@color/persianGreen</item>
        <item name="colorFollowup">@color/ToryBlue</item>
        <item name="colorOther">@color/limerick</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="buttonStyle">@style/button</item>
        <item name="android:radioButtonStyle">@style/radio</item>
        <item name="radioButtonStyle">@style/radio</item>
        <item name="android:textViewStyle">@style/text</item>
        <item name="android:editTextStyle">@style/editTextStyle</item>
        <item name="android:dropDownSpinnerStyle">@style/spinnerStyle</item>
        <item name="android:checkboxStyle">@style/checkBoxStyle</item>

    </style>

    <style name="DarkTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DarkTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/main_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/medium</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="radio" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:button">@drawable/darktheme_btn_radio</item>
    </style>

    <style name="text" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="editTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="spinnerStyle" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:background">@drawable/darktheme_spinner</item>
    </style>

    <style name="checkBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

</resources>
