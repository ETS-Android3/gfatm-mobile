<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/medium"
    android:background="@color/bacon"
    android:orientation="horizontal"
    android:padding="@dimen/large">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AFB Culture"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEncounterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encounter Name: PMDT - Baseline Medical Assessment"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvEncounterDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encounter Date: 12 - Jan - 2020"
            android:textSize="12sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4">

        <ImageButton
            android:id="@+id/ibCheck"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/large"
            android:layout_toStartOf="@id/layoutButtons"
            android:background="@color/bacon"
            android:src="@drawable/lab_ic_checked_green" />

        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/lab_btn_round"
                android:backgroundTint="@color/colorPrimaryDark"
                android:paddingLeft="@dimen/large"
                android:paddingRight="@dimen/large"
                android:text="@string/summary"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnAddResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/small"
                android:background="@drawable/lab_btn_round"
                android:backgroundTint="@color/colorPrimary"
                android:paddingLeft="@dimen/large"
                android:paddingRight="@dimen/large"
                android:text="@string/addResult"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>