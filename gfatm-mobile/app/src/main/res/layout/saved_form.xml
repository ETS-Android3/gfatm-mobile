<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorBackground"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbarParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/DarkTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?colorPrimary"
            app:popupTheme="@style/DarkTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!--<LinearLayout-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_weight="2"-->
        <!--android:orientation="horizontal" >-->

        <TextView
            android:paddingTop="@dimen/small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/offline_filter_forms"
            android:layout_weight="2"

            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectFormType"
            android:spinnerMode="dialog"
            android:layout_weight="2"/>

        <!--</LinearLayout>-->

        <ImageView
            android:id="@+id/submitIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:src="@drawable/ic_submit" />

        <ImageView
            android:id="@+id/emailIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:src="@drawable/ic_email" />

        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:src="@drawable/ic_delete" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbarFadeDuration="0">

        <LinearLayout
            android:id="@+id/mainlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/small">

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="?android:attr/dividerHorizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/small"
                android:showDividers="middle|end">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="5.5"
                >

                <Button
                    android:id="@+id/previousButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous"
                    android:layout_weight="2"/>

                <LinearLayout
                    android:id="@+id/navigationContentOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="?android:attr/dividerVertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/small"
                    android:showDividers="middle|end"
                    android:layout_weight="0.5">

                </LinearLayout>


                <TextView
                    android:id="@+id/pageNumber"
                    android:paddingTop="@dimen/small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3/5"

                    />

                <LinearLayout
                    android:id="@+id/navigationContentTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="?android:attr/dividerVertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/small"
                    android:showDividers="middle|end"
                    android:layout_weight="0.5">

                </LinearLayout>

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:layout_weight="2.5"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>