<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="?colorBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarFadeDuration="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/mainContent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/content_common"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:background="@drawable/summary_button"
                android:visibility="gone">


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small"
                android:text="Screening"
                android:drawableRight="@drawable/ic_more"
                android:id="@+id/screening"
                android:drawableTint="?colorPrimaryDark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/content_screening"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:background="@drawable/summary_button"
                android:visibility="gone">


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small"
                android:text="Tests"
                android:drawableRight="@drawable/ic_more"
                android:id="@+id/test"
                android:drawableTint="?colorPrimaryDark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/content_test"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:background="@drawable/summary_button"
                android:visibility="gone">


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small"
                android:text="Treatment"
                android:drawableRight="@drawable/ic_more"
                android:id="@+id/treatment"
                android:drawableTint="?colorPrimaryDark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/content_treatment"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:background="@drawable/summary_button"
                android:visibility="gone">


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small"
                android:text="Comorbidities"
                android:drawableRight="@drawable/ic_more"
                android:id="@+id/comorbidities"
                android:drawableTint="?colorPrimaryDark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/content_comorbidities"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:background="@drawable/summary_button"
                android:visibility="gone">


            </LinearLayout>

        </LinearLayout>



    </ScrollView>

    <fragment
        android:name="com.ihsinformatics.gfatmmobile.BlankFragment"
        android:id="@+id/fragment_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>