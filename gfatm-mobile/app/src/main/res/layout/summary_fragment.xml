<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/small">

            <Button
                android:id="@+id/patientAttribute"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/summary_button"
                android:drawablePadding="@dimen/medium"
                android:drawableTop="@drawable/ic_edit"
                android:padding="@dimen/large"
                android:layout_gravity="center"
                android:text="@string/patient_attribute"
                android:textColor="?colorRegistration"
                android:drawableTint="?colorRegistration"
                android:textSize="@dimen/large"
                android:layout_marginBottom="@dimen/medium"/>

            <Button
                android:id="@+id/genralPatientView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/summary_button"
                android:drawablePadding="@dimen/medium"
                android:drawableTop="@drawable/ic_patient_view"
                android:padding="@dimen/large"
                android:layout_gravity="center"
                android:text="General Patient View"
                android:textColor="?colorFollowup"
                android:drawableTint="?colorFollowup"
                android:textSize="@dimen/large"
                android:layout_marginBottom="@dimen/medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/patientView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/summary_button"
                    android:drawablePadding="@dimen/medium"
                    android:drawableTop="@drawable/ic_summary_view"
                    android:padding="@dimen/large"
                    android:layout_gravity="center"
                    android:text="@string/fast_patient_view"
                    android:textColor="?colorFollowup"
                    android:drawableTint="?colorFollowup"
                    android:textSize="@dimen/large"
                    android:layout_marginRight="@dimen/tiny"/>

                <Button
                    android:id="@+id/dailyStaffView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/summary_button"
                    android:drawablePadding="@dimen/medium"
                    android:drawableTop="@drawable/ic_staff_view"
                    android:padding="@dimen/large"
                    android:layout_gravity="center"
                    android:text="@string/fast_staff_view"
                    android:textColor="?colorOther"
                    android:drawableTint="?colorOther"
                    android:textSize="@dimen/large"
                    android:layout_marginLeft="@dimen/tiny"/>


                </LinearLayout>

            </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TItle"
            android:padding="@dimen/medium"
            android:textSize="@dimen/xlarge"
            android:textColor="?colorAccent"
            android:textStyle="bold"
            android:layout_weight="1">
        </TextView>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/summary_button"
            android:layout_weight="30"
            android:scrollbarFadeDuration="0">

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="?android:attr/dividerHorizontal"
                android:padding="@dimen/small"
                android:showDividers="middle|end"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Rabbia Hassan"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Testing 123"/>


            </LinearLayout>


        </ScrollView>

        <TextView
            android:id="@+id/backButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:gravity="right"
            android:padding="@dimen/medium"
            android:textSize="@dimen/xlarge"
            android:textColor="?colorAccent"
            android:layout_weight="1">
        </TextView>

    </LinearLayout>

</RelativeLayout>