<resources>

    <style name="DarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="datePicker" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="colorPrimary">@color/metallicSeaweed</item>
        <item name="colorPrimaryDark">@color/midnightGreen</item>
        <item name="colorAccent">@color/charlestonGreen</item>
        <item name="colorControlActivated">#33691e</item>
        <item name="android:selectableItemBackgroundBorderless">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">#d50000</item>
    </style>

    <style name="datePickerDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/metallicSeaweed</item>
        <item name="colorPrimaryDark">@color/midnightGreen</item>
        <item name="colorAccent">@color/charlestonGreen</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:datePickerStyle">@style/datePicker</item>
        <item name="colorControlActivated">@color/charlestonGreen</item>
        <item name="colorControlNormal">@color/metallicSeaweed</item>
        <item name="android:textColorPrimary">@android:color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@android:color/black</item>
       <!-- <item name="android:selectableItemBackgroundBorderless">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">#d50000</item>-->
        <item name="android:textColor">@color/metallicSeaweed</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimaryDark">@color/midnightGreen</item>
        <item name="colorPrimary">@color/metallicSeaweed</item>
        <item name="colorAccent">@color/charlestonGreen</item>
        <item name="colorBackground">@color/white</item>

        <item name="colorRegistration">@color/teal</item>
        <item name="colorScreening">@color/purple</item>
        <item name="colorTreatment">@color/harleyDavidsonOrange</item>
        <item name="colorFollowup">@color/ToryBlue</item>
        <item name="colorOther">@color/amber</item>
        <item name="colorButton">@color/bacon</item>
        <item name="colorMonitoring">@color/blueSponge</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="buttonStyle">@style/button</item>
        <item name="android:radioButtonStyle">@style/radio</item>
        <item name="radioButtonStyle">@style/radio</item>
        <item name="android:editTextStyle">@style/editTextStyle</item>
        <item name="android:dropDownSpinnerStyle">@style/spinnerStyle</item>
        <item name="android:checkboxStyle">@style/checkBoxStyle</item>
        <item name="android:textViewStyle">@style/text</item>
        <item name="android:datePickerStyle">@style/datePicker</item>
        <item name="android:datePickerDialogTheme">@style/datePickerDialog</item>

        <!-- <item name="android:progressBarStyle">@style/progressBar</item>-->

        <item name="progressBarStyle">@style/progressBar</item>

    </style>

    <style name="dialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/metallicSeaweed</item>
        <item name="colorPrimaryDark">@color/midnightGreen</item>
        <item name="colorAccent">@color/charlestonGreen</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textStyle">bold</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarButtonStyle">@style/ButtonStyle</item>

        <item name="android:datePickerDialogTheme">@style/datePickerDialog</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#2C9FD3</item>
    </style>


    <style name="progressBar" parent="@android:style/Widget.ProgressBar">
        <item name="colorPrimary">@color/metallicSeaweed</item>
        <item name="colorPrimaryDark">@color/midnightGreen</item>
        <item name="colorAccent">@color/metallicSeaweed</item>
    </style>

</resources>
